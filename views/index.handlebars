<body class="body">

<div class="container">
<div class="headDiv">
</div>


<h1 class="text-center">Burger Time!!</h1><hr><br>  

<div class="row">
  <div class="col-lg-4 text-center">  
    <h4><u>Burgers to eat</u></h4>
    <ul> 
        {{#each burger}}
         {{#unless this.devoured}}
         <li>
             {{this.burger_name}}

            <form action="/burgerseat/update?_method=PUT" method="POST">
                <input type="hidden" type="text" name="burger_id" value={{this.id}}>
                <button type="submit">DEVOUR IT!</button>
            </form>

         </li> 
         {{/unless}}
        {{/each}}
    </ul>        
  </div>
  <div class="col-lg-4 text-center">
    <h4><u>Devoured Burgers</u></h4>
    <ul>
        {{#each burger}}
          {{#if this.devoured}}
            <li>
                {{this.burger_name}}

                <form action="/burgersmake/update?_method=PUT" method="POST">
                    <input type="hidden" type="text" name="burger_id" value={{this.id}}>
                    <button type="submit">MAKE ANOTHER!</button>
                </form>

            </li>    
          {{/if}}
        {{/each}}
    </ul>    
  </div>

  <div class="col-lg-4 text-center">  
    <h4><u>Add Burger</u></h4>
    <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="burger_name">
        </div>
        <div class="form-group">
            <label for="dv">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0">Not Eaten Yet<Yet></Yet>
        </div>

        <button type="submit">Add Burger</button>
    </form> 
  </div>
</div>    

</div>

</body>
